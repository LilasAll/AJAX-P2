<center>
<div class="button-send " style="display: flex; flex-direction: row; justify-content: center; margin: 50px; " >
<button type="button" class="btn btn-info"><%= link_to '<img src="data:image/png;base64,"/>'.html_safe, email_index_path, method: :post, remote: true %> </button>
</div>
</center>
<br/>

<table class="table table-striped table-dark email-table" id="email-list">
  <thead>
    <tr>
      <th scope="col">#Email</th>
      <th scope="col">Liste des emails</th>
      <th scope="col">Email sélectionné</th>
    </tr>
  </thead>
  <tbody>
    <% Email.all.each do  |email|%>
    <tr>
      <th scope="row"><%= email.id %></th>
      <td><%= email.object %></td>
      <td><%= email.body %> </td>
    </tr>
    <% end %>
  </tbody>
</table>


